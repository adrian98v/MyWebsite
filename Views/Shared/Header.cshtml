@{
    string selectedLanguage = Context.Request.Cookies["lang"] ?? "en";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Adrian Veppo</title>
    <link rel="icon" type="image/x-icon" href="~/Logo_tab.jpg" />

    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
</head>

<body>

    <header class="header_container">

        <img src="./Logo.png" class="logo"/>

        <script>
            function openLanguageMenu() {
                const languageMenu = document.querySelector(".dropdown-language");
                languageMenu.classList.toggle("visible");
                
            }

            function openResponsiveMenu() {

                const responsiveMenu = document.querySelector(".dropdown-menu");
                responsiveMenu.classList.toggle("active");
                
            }

        </script>
        

        <div class="header_nav">

            


            @switch(selectedLanguage)
            {
               case "es":
                   <a href="/">Inicio</a>
                   <a href="/#projects">Proyectos</a>
                   <a href="/#contact">Contacto</a>
                    <button class="btn_lang" onclick="openLanguageMenu()">
                        <img class="flag_img" src="~/flags/spain.png" />
                   </button>
                    
               break;
               case "en":
                    <a href="/">Home</a>
                    <a href="/#projects">Projects</a>
                    <a href="/#contact">Contact</a>
                    <button class="btn_lang" onclick="openLanguageMenu()">
                        <img class="flag_img" src="~/flags/uk.png" />
                    </button>
               break;
                case "pt":
                    <a href="/">Início</a>
                    <a href="/#projects">Projetos</a>
                    <a href="/#contact">Contacto</a>
                    <button class="btn_lang" onclick="openLanguageMenu()">
                        <img class="flag_img" src="~/flags/portugal.png" />
                    </button>
                break;
            }
            
            

            <div class="dropdown-language">
                <a href="@Url.Action("changeLanguage", "Language", new { lang = "es", returnUrl = Context.Request.Path + Context.Request.QueryString })">Español</a>
                <a href="@Url.Action("changeLanguage", "Language", new { lang = "en", returnUrl = Context.Request.Path + Context.Request.QueryString })">English</a>
                <a href="@Url.Action("changeLanguage", "Language", new { lang = "pt", returnUrl = Context.Request.Path + Context.Request.QueryString })">Português</a>

            </div>

            
        </div>


        

        <button class="dropdown_button" onclick="openResponsiveMenu()">☰</button>

        <nav class="dropdown-menu">

            @switch (selectedLanguage)
            {
                case "es":
                    <a href="/">Inicio</a>
                    <a href="/#projects">Proyectos</a>
                    <a href="/#contact">Contacto</a>
                  
                    
                    break;
                case "en":
                    <a href="/">Home</a>
                    <a href="/#projects">Projects</a>
                    <a href="/#contact">Contact</a>
                    
                    break;
                case "pt":
                    <a href="/">Início</a>
                    <a href="/#projects">Projetos</a>
                    <a href="/#contact">Contacto</a>
                    
                    break;
            }


            <div class="responsive_lang_options">

                @switch (selectedLanguage)
                {
                    case "es":
                        <label>Idioma</label>

                        break;
                    case "en":
                        <label>Language</label>
                        break;
                    case "pt":
                        <label>Idioma</label>
                        break;
                }
                
                <a class="responsive_spanish" href="@Url.Action("changeLanguage", "Language", new { lang = "es", returnUrl = Context.Request.Path + Context.Request.QueryString })">Español</a>
                <a class="responsive_english" href="@Url.Action("changeLanguage", "Language", new { lang = "en", returnUrl = Context.Request.Path + Context.Request.QueryString })">English</a>
                <a class="responsive_portuguese" href="@Url.Action("changeLanguage", "Language", new { lang = "pt", returnUrl = Context.Request.Path + Context.Request.QueryString })">Português</a>

            </div>

            
        </nav>

        

    </header>



    @RenderBody()
    
</body>
</html>
